apiVersion: v1
baseDomain: "{{ domain }}"
compute:
- name: worker
  replicas: 0 
controlPlane:
  name: master
  replicas: 1 
metadata:
  name: {{ item }}
networking: 
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16 
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
bootstrapInPlace:
  installationDisk: /dev/disk/by-id/wwn-{{ clusters[item].wwn }}
pullSecret: '{{ pullsecret | regex_replace('\'', '"') }}'
sshKey: |
  {{ sshkey | regex_replace('"', '') }}
